<%- include("partials/displaynewsheader") %>
<%- include("partials/messages") %>


<div class="container">
	<div class = "row"  >
		<div class="col-md-9" style="margin:left;">
			<div class="thumbnail"  >
				<img class="img-responsive" src="<%=posts.image%>" style="width:1000px; height:auto; padding:10px;">
				<div class="container">
				<div class="caption-full" style="margin-left:auto;">
					<h4 style="font-size:30px;"><a><%=posts.name%></a></h4>
					<h4 class="pull-right" style="margin-top:-20px;"><em>Created on: <%=posts.date%></em></h4>
					<p style="font-size:17px;">
						<em>Source: <%=posts.source%></em>
					</p>
					<p style="font-size:15px;"><%=posts.description%></p>
					
				</div>
				</div>
			</div>
        </div>
        <div class="col-md-3">
            <div class="container" style="background-color:aliceblue; border-radius: 3px; margin-bottom:20px">
                <h2 style="text-align: center; margin-top: 10px; margin-bottom: 10px; font-size: 30px;">Recent News</h2>
				<%for(var i=0; i<3; i++){%>
                <div class="thumbnail" style="margin-left:auto;">
                    <img class="img-responsive" src="<%=news[i].image%>" style="width:autox; height:auto;">
					<h4 style="font-size:18px; text-align: left;"><a><%=news[i].name%></a></h4>
					<a class="btn btn-danger" href="/newspage/<%=news[i]._id%>" style="color: #FFFFFF;">Read more</a>	
				</div>
				<%}%>
				<h1 style="text-align: center; font-size: 18px;"><a href="/news">Check more news...</a></h1>
                </div>
            </div>
	</div>	
</div>


<%- include("partials/footer") %>